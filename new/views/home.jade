extends layout
block content
    .wl-home
        .wl-home-wrapper
            h1.wl-header
                a(href='index.html') Zhidu
            p
              input.wl-index-search(type='text', placeholder='Search')
            - classes.forEach(function (item, index) {
                .wl-tile
                    .wl-container
                        a.wl-class-link(href='/#{item.id}')
                            img(src='img/#{item.name}.jpg', alt='other', width='100%')
                            span.wl-title #{item.name}
            - })
    
