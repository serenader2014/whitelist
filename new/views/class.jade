                $.ajax({
                    type:'POST',
                    url:targetUrl,
                    data:{
                        description:$(self).siblings('textarea').val(),
                        id: id,
                        type: product
                    },
                    success: function(data){
                        var data = $.parseJSON(data);
                        $(self).siblings('textarea').html(data.data.remark).val(data.data.remark);
                        $(self).parents('td').find('.td-remark').html(data.data.remark);
                    }
                })
            });



                                        
                                        